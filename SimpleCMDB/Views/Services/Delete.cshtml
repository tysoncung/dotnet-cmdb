@model SimpleCMDB.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<h1>Delete Service</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">
            Server
        </dt>
        <dd class="col-sm-10">
            @if (Model.Server != null)
            {
                @Model.Server.Hostname
            }
            else
            {
                <span>N/A</span>
            }
        </dd>
        <dt class="col-sm-2">
            Application
        </dt>
        <dd class="col-sm-10">
            @if (Model.Application != null)
            {
                @Model.Application.Name
            }
            else
            {
                <span>N/A</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Port)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Port)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Protocol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Protocol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Status == "running" ? "success" : Model.Status == "stopped" ? "danger" : "warning")">
                @Html.DisplayFor(model => model.Status)
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProcessName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>