@model SimpleCMDB.Models.Server

@{
    ViewData["Title"] = "Server Details";
}

<h1>Server Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hostname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hostname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IpAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IpAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OsType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OsType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OsVersion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OsVersion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Environment)
        </dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Environment == "production" ? "danger" : Model.Environment == "development" ? "info" : "warning")">
                @Html.DisplayFor(model => model.Environment)
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Status == "active" ? "success" : Model.Status == "inactive" ? "secondary" : "warning")">
                @Html.DisplayFor(model => model.Status)
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CpuCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CpuCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemoryGb)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemoryGb)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiskGb)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiskGb)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>

@if (Model.Services != null && Model.Services.Any())
{
    <h3>Services Running on this Server</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Service Name</th>
                <th>Port</th>
                <th>Status</th>
                <th>Application</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model.Services)
            {
                <tr>
                    <td>@service.ServiceName</td>
                    <td>@service.Port</td>
                    <td>
                        <span class="badge bg-@(service.Status == "running" ? "success" : service.Status == "stopped" ? "danger" : "warning")">
                            @service.Status
                        </span>
                    </td>
                    <td>@(service.Application?.Name ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>