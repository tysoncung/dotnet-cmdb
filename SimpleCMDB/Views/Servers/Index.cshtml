@model IEnumerable<SimpleCMDB.Models.Server>

@{
    ViewData["Title"] = "Servers";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Servers</h1>
            <p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New
                </a>
            </p>
        </div>
    </div>

    <!-- Desktop view -->
    <div class="d-none d-lg-block">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Hostname)</th>
                        <th>@Html.DisplayNameFor(model => model.IpAddress)</th>
                        <th>@Html.DisplayNameFor(model => model.OsType)</th>
                        <th>@Html.DisplayNameFor(model => model.Environment)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>@Html.DisplayNameFor(model => model.Owner)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Hostname)</td>
                            <td>@Html.DisplayFor(modelItem => item.IpAddress)</td>
                            <td>@Html.DisplayFor(modelItem => item.OsType)</td>
                            <td>
                                <span class="badge bg-@(item.Environment == "production" ? "danger" : item.Environment == "development" ? "info" : "warning")">
                                    @Html.DisplayFor(modelItem => item.Environment)
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@(item.Status == "active" ? "success" : item.Status == "inactive" ? "secondary" : "warning")">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Owner)</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile/Tablet view -->
    <div class="d-lg-none">
        <div class="row">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-6 mb-3">
                        <div class="card">
                            <div class="card-header">
                                <strong>@item.Hostname</strong>
                                <span class="badge bg-@(item.Status == "active" ? "success" : item.Status == "inactive" ? "secondary" : "warning") float-end">
                                    @item.Status
                                </span>
                            </div>
                            <div class="card-body">
                                <p class="mb-1"><strong>IP:</strong> @item.IpAddress</p>
                                <p class="mb-1"><strong>OS:</strong> @item.OsType @item.OsVersion</p>
                                <p class="mb-1">
                                    <strong>Env:</strong>
                                    <span class="badge bg-@(item.Environment == "production" ? "danger" : item.Environment == "development" ? "info" : "warning")">
                                        @item.Environment
                                    </span>
                                </p>
                                <p class="mb-2"><strong>Owner:</strong> @item.Owner</p>
                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                </div>
                }
            }
        </div>
    </div>
</div>