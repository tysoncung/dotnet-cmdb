@model SimpleCMDB.Models.Server

@{
    ViewData["Title"] = "Delete Server";
}

<h1>Delete Server</h1>

<h3 class="text-danger">Are you sure you want to delete this server?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hostname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hostname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IpAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IpAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OsType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OsType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Environment)
        </dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Environment == "production" ? "danger" : Model.Environment == "development" ? "info" : "warning")">
                @Html.DisplayFor(model => model.Environment)
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Status == "active" ? "success" : Model.Status == "inactive" ? "secondary" : "warning")">
                @Html.DisplayFor(model => model.Status)
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>